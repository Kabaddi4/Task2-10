<!--@インスタンス.メソッド |モデル|-->
<h1><string>Books</string></h1>
<table>
  <thead>
    <tr>
      <th>title</th>
      <th>body</th>
      <th colspan="3"></th>
    </tr>
  </tread>
  <tbody>
    <% @books.each do |book| %> <!--インスタンス変数booksから-->
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Show", book_path(book.id) %></td>
        <td><%= link_to "Edit", edit_book_path(book.id) %></td> <!--12行目で、ローカル変数bookを定義している-->
        <td><%= link_to "Destroy", book_path(book.id), method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>
<% if flash[:alert] %>
  <p><%= flash[:alert] %></p>
<% end %>

<h2><string>New Book</string></h2>
<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<%= form_with model: @book, local: true do |f| %>
  <p>title</p><%= f.text_field :title %>
  <p>body</p><%= f.text_area :body %><br>
  <%= f.submit 'create book' %>
<% end %>


