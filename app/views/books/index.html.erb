<h1><string>Books</string></h1>
<table>
  <thead>
    <tr>
      <th>title</th>
      <th>body</th>
      <th colspan="3"></th>
    </tr>
  </tread>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Edit", edit_book_path(book.id) %></td> <!--12行目で、ローカル変数bookを定義している-->
      </tr>
    <% end %>
  </tbody>
</table>


<h2><string>New Book</string></h2>
<%= form_with model: @book, url:'/books', local:true do |f| %>
  <p>title</p><%= f.text_field :title %>
  <p>body</p>
  <%= f.text_area :body %><br>
  <%= f.submit 'create book' %>
<% end %>


